package utils

import (
	"github.com/gin-gonic/gin"
)

type Errno struct {
	Code    int
	Message string
}

type ResponseJSON struct {
	Code    int         `json:"code" example:"200"`
	Message string      `json:"message" example:"success"`
	Object  interface{} `json:"result"`
	Total interface{} `json:"total"`
}

var (
	OK                 = 200
	Error              = 400
	NotFound           = 404
	ServerError        = 500
	)


func NormalResponse(c *gin.Context, code int, message string, object interface{},total int) {
	var resp ResponseJSON
	resp = ResponseJSON{Code: code, Message: message, Object: object,Total: total}
	c.JSON(200, resp)
}

func BadResponse(c *gin.Context, code int, message string) {
	var resp ResponseJSON
	resp = ResponseJSON{Code: code, Message: message,Object: nil,Total: 0}
	c.JSON(200, resp)
}